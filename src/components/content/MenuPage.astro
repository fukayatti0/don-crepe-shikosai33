---
import { content } from '../../constants/content';
import { Image } from 'astro:assets';
import IchigoChocoImage from '/public/images/strawberry-chocolate.jpg';
import MatchaImage from '/public/images/matcha-anko.jpg';
import CookieAndCreamImage from '/public/images/cookie-and-cream.jpg';

const language = 'ja';
const t = content[language].menu;

const images = [
  IchigoChocoImage,
  MatchaImage,
  CookieAndCreamImage,
];
---
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={t.title} />
    <title>{t.pagetitle}</title>
</head>
<body>
    <div>
        <main class="container mx-auto my-5 p-4 bg-white/30 rounded-lg">
            <title>{t.pagetitle}</title>
            <meta name="description" content={t.title} />
            <h1 class="mb-8 text-3xl font-bold text-center">{t.title}</h1>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {t.items.map((item, index) => (
                    <div class="col" id={`item-${index}`}>
                        <div class="card h-full bg-white shadow-md rounded-lg overflow-hidden">
                            <Image 
                                src={images[index]} 
                                alt={item.name}
                                class="w-full object-cover"
                                width="1108"
                                height="1477"
                            />
                            <div class="p-4">
                                <h5 class="text-xl font-semibold">{item.name}</h5>
                                <p class="text-gray-700 mt-2">{item.description}</p>
                                <h6 class="text-lg font-bold mt-4">
                                    {item.price}
                                </h6>
                            </div>
                        </div>
                        
                    </div>
                ))}
            </div>
        </main>
    </div>
</body>
</html>