---
import { content } from '../../constants/content';
import { Image } from '@unpic/astro';

const language = 'ja';
const t = content[language].footer;
---

<footer class="bg-gradient-to-r from-emerald-500 to-indigo-500 text-white py-8">
    <div class="container mx-auto px-4">
        <div class="contact-info mb-4 flex justify-between">
            {t.address}
        </div>
        <hr class="border-white-700 my-4" />
        <div class="footer-bottom flex justify-between items-center">
            <div class="flex items-center space-x-4">
                <div class="footer-text text-xl">
                    {t.copy}
                </div>
            </div>
            <div class="social-links flex space-x-4">
                <a href="https://x.com/don_crepe_nitic" target="_blank" rel="noopener noreferrer">
                    <Image
                        src="/images/sns-btn-x-white.png"
                        alt="X（Twitter）"
                        width={30}
                        height={30}
                        class="mx-auto"
                    />
                </a>
                <a href="https://instagram.com/don_crepe.nitic" target="_blank" rel="noopener noreferrer">
                    <Image
                        src="/images/sns-btn-instagram-white.png"
                        alt="Instagram"
                        width={30}
                        height={30}
                        class="mx-auto"
                    />
                </a>
            </div>
        </div>
    </div>
</footer>